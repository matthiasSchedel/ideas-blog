---
interface Props {
  title: string;
  description?: string;
}

const {
  title,
  description = 'Ideas from Matthias Schedel'
} = Astro.props as Props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title}</title>
    <style>
      :root {
        --bg: #040506;
        --panel: #090b0d;
        --panel-soft: #0d1013;
        --text: #f2f4f6;
        --muted: #a7adb4;
        --line: #1f242b;
        --accent: #e9edf1;
      }

      * {
        box-sizing: border-box;
      }

      html,
      body {
        margin: 0;
        padding: 0;
        background:
          radial-gradient(circle at 18% -8%, rgba(86, 111, 143, 0.22) 0%, rgba(4, 5, 6, 0) 36%),
          radial-gradient(circle at 0% 40%, rgba(75, 89, 120, 0.1) 0%, rgba(4, 5, 6, 0) 30%),
          linear-gradient(180deg, #06080b 0%, var(--bg) 42%);
        color: var(--text);
        font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, 'Liberation Mono',
          'Courier New', monospace;
        font-size: 17px;
        text-rendering: optimizeLegibility;
      }

      a {
        color: var(--accent);
        text-decoration: none;
        text-underline-offset: 0.18em;
      }

      a:hover {
        text-decoration: underline;
      }

      .shell {
        max-width: 860px;
        margin: 0 auto;
        padding: 1.5rem 1.1rem 4rem;
      }

      .top {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 1.2rem;
        margin-bottom: 2rem;
        flex-wrap: wrap;
      }

      .brand {
        border: 1px solid var(--line);
        background: var(--panel-soft);
        padding: 0.38rem 0.62rem;
        letter-spacing: 0.02em;
        font-size: 0.96rem;
      }

      .nav {
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
        font-size: 0.88rem;
        text-transform: lowercase;
      }

      .card {
        border: 1px solid var(--line);
        background: linear-gradient(180deg, var(--panel-soft) 0%, var(--panel) 100%);
        padding: 1.6rem;
        box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.02);
      }

      h1,
      h2,
      h3 {
        line-height: 1.2;
        letter-spacing: 0.01em;
        margin: 0 0 0.85rem;
      }

      h1 {
        font-size: 2rem;
      }

      h2 {
        font-size: 1.52rem;
        margin-top: 1.7rem;
      }

      h3 {
        font-size: 1.15rem;
        margin-top: 1.4rem;
      }

      p,
      li {
        color: var(--text);
        line-height: 1.68;
      }

      p {
        max-width: 70ch;
        margin: 0 0 1rem;
      }

      ul {
        margin: 0.5rem 0 1.1rem;
        padding-left: 1.2rem;
      }

      li {
        margin-bottom: 0.26rem;
      }

      .muted {
        color: var(--muted);
      }

      @media (max-width: 720px) {
        html,
        body {
          font-size: 16px;
        }

        .card {
          padding: 1.2rem;
        }

        h1 {
          font-size: 1.7rem;
        }

        .nav {
          gap: 0.82rem;
          font-size: 0.85rem;
        }
      }
    </style>
  </head>
  <body>
    <main class="shell">
      <header class="top">
        <a class="brand" href="/">Matthias Schedel</a>
        <nav class="nav">
          <a href="/links">links</a>
          <a href="/projects">projects</a>
          <a href="/contact">contact</a>
        </nav>
      </header>
      <article class="card">
        <slot />
      </article>
    </main>
  </body>
</html>
