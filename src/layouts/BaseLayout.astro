---
interface Props {
  title: string;
  description?: string;
}

const {
  title,
  description = 'Ideas from Matthias Schedel'
} = Astro.props as Props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title}</title>
    <style>
      :root {
        --bg: #0b0b0b;
        --panel: #111111;
        --text: #f2f2f2;
        --muted: #b3b3b3;
        --line: #2a2a2a;
        --accent: #e6e6e6;
      }

      * {
        box-sizing: border-box;
      }

      html,
      body {
        margin: 0;
        padding: 0;
        background: radial-gradient(circle at 20% 0%, #1a1a1a 0%, #0b0b0b 45%);
        color: var(--text);
        font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, 'Liberation Mono',
          'Courier New', monospace;
      }

      a {
        color: var(--accent);
        text-decoration: none;
      }

      a:hover {
        text-decoration: underline;
      }

      .shell {
        max-width: 760px;
        margin: 0 auto;
        padding: 1.5rem 1rem 4rem;
      }

      .top {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 1rem;
        margin-bottom: 2rem;
      }

      .brand {
        border: 1px solid var(--line);
        background: var(--panel);
        padding: 0.35rem 0.55rem;
        letter-spacing: 0.03em;
      }

      .nav {
        display: flex;
        gap: 0.8rem;
        font-size: 0.95rem;
      }

      .card {
        border: 1px solid var(--line);
        background: linear-gradient(180deg, #111111 0%, #0d0d0d 100%);
        padding: 1.4rem;
      }

      h1,
      h2,
      h3 {
        line-height: 1.2;
      }

      p,
      li {
        color: var(--text);
        line-height: 1.6;
      }

      .muted {
        color: var(--muted);
      }
    </style>
  </head>
  <body>
    <main class="shell">
      <header class="top">
        <a class="brand" href="/">Matthias Schedel</a>
        <nav class="nav">
          <a href="/links">links</a>
          <a href="/projects">projects</a>
          <a href="/contact">contact</a>
        </nav>
      </header>
      <article class="card">
        <slot />
      </article>
    </main>
  </body>
</html>
