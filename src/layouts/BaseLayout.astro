---
interface Props {
  title: string;
  description?: string;
}

const {
  title,
  description = 'Ideas from Matthias Schedel'
} = Astro.props as Props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title}</title>
    <style>
      :root {
        --bg: #0a0a0a;
        --text: #e5e5e5;
        --muted: #a3a3a3;
        --border: #262626;
        --panel: rgba(255, 255, 255, 0.01);
      }

      * {
        box-sizing: border-box;
      }

      html,
      body {
        margin: 0;
        padding: 0;
        background:
          radial-gradient(circle at 18% -8%, rgba(83, 101, 130, 0.19) 0%, rgba(10, 10, 10, 0) 32%),
          var(--bg);
        color: var(--text);
        font-family: 'JetBrains Mono', 'SF Mono', ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas,
          'Liberation Mono', 'Courier New', monospace;
        font-size: 17px;
        line-height: 1.55;
      }

      a {
        color: var(--text);
        text-decoration-thickness: 1px;
        text-underline-offset: 2px;
      }

      a:hover {
        text-decoration: underline;
      }

      .shell {
        max-width: 760px;
        margin: 0 auto;
        padding: 1.5rem 1rem 4rem;
      }

      .top {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 1.2rem;
        margin-bottom: 1.2rem;
        flex-wrap: wrap;
      }

      .brand {
        border: 1px solid var(--border);
        background: var(--panel);
        padding: 0.35rem 0.58rem;
        letter-spacing: 0.02em;
        font-size: 0.86rem;
      }

      .nav {
        display: flex;
        flex-wrap: wrap;
        gap: 0.85rem;
        font-size: 0.85rem;
        text-transform: lowercase;
      }

      .card {
        border: 1px solid var(--border);
        border-radius: 12px;
        background: var(--panel);
        padding: 1.6rem;
      }

      h1,
      h2,
      h3 {
        line-height: 1.2;
        letter-spacing: 0.01em;
        margin: 0 0 0.85rem;
      }

      h1 {
        font-size: clamp(1.7rem, 3.2vw, 2.3rem);
        letter-spacing: -0.03em;
      }

      h2 {
        font-size: 1.52rem;
        margin-top: 1.7rem;
      }

      h3 {
        font-size: 1.15rem;
        margin-top: 1.4rem;
      }

      p,
      li {
        color: var(--text);
        line-height: 1.68;
      }

      p {
        max-width: 70ch;
        margin: 0 0 1rem;
      }

      ul {
        margin: 0.5rem 0 1.1rem;
        padding-left: 1.2rem;
      }

      li {
        margin-bottom: 0.26rem;
      }

      .muted {
        color: var(--muted);
      }

      .section-heading {
        margin: 1.8rem 0 0.8rem;
        font-size: 0.9rem;
        letter-spacing: 0.02em;
        color: var(--muted);
        text-transform: uppercase;
      }

      .list {
        display: flex;
        flex-direction: column;
        gap: 12px;
      }

      .row {
        border: 1px solid var(--border);
        border-radius: 12px;
        padding: 0.9rem;
        background: var(--panel);
      }

      .row-title {
        margin: 0 0 0.4rem;
        font-size: 1rem;
      }

      .row-meta {
        margin: 0;
        color: var(--muted);
        font-size: 0.9rem;
      }

      @media (max-width: 720px) {
        html,
        body {
          font-size: 16px;
        }

        .card {
          padding: 1.2rem;
        }

        h1 {
          font-size: 1.7rem;
        }

        .nav {
          gap: 0.82rem;
          font-size: 0.85rem;
        }
      }
    </style>
  </head>
  <body>
    <main class="shell">
      <header class="top">
        <a class="brand" href="/">Matthias Schedel</a>
        <nav class="nav">
          <a href="/posts">posts</a>
          <a href="/links">links</a>
          <a href="/projects">projects</a>
          <a href="/contact">contact</a>
        </nav>
      </header>
      <article class="card">
        <slot />
      </article>
    </main>
  </body>
</html>
